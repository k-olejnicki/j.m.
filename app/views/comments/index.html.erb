<% @comments.each do |c| %>
    <div class="box">
      <div class="panel panel-default">
        <% c.gender %><br/>
        <div class="panel-body">
          <%= c.author %><br/>
        </div>
        <div class="panel-body">
          <%= c.body %><br/>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edytuj', edit_comment_url(:id) %><br/>
          <%= link_to 'Usuń', comment_url(:id), method: :delete, data: {confirm: 'Jesteś pewien?'} %><br/>
        </div>
      </div>
    </div>
<% end %>
