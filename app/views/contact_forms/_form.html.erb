<%=form_for @contact_form do |f|%>
    <%=f.label :name, "imię i nazwisko" %>
    <%=f.text_field :name, :required => false %>
    <%=f.label :email, "e-mail" %>
    <%=f.text_field :email, :required => false %>
    <%=f.label :tel, "telefon" %>
    <%=f.text_field :tel, :required => false %>
    <%=f.label :message, "treść wiadomości" %>
    <%=f.text_field :message, :as => :text, :required => false %>
    <%=f.label :nickname, "nick" %>
    <%=f.text_field :nickname, :hint => 'Leave this field blank!'%>
    <%=f.submit 'Wyślij wiadomość'%>
<%end%>