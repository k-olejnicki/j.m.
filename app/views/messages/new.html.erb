<%= form_for @message, url: contact_path do |message_form| %>
    <fieldset>
      <div class="field">
        <%= message_form.text_field :name, placeholder: "Imię i Nazwisko" %>
      </div>

      <div class="field">
        <%= message_form.email_field :email, placeholder: "Email"%>
      </div>

      <div class="field">
        <%= message_form.text_field :tel, placeholder: "Telefon" %>
      </div>

      <div class="field">
        <%= message_form.text_area :content, placeholder: "Treść Wiadomości"%>
      </div>
    </fieldset>

    <fieldset>
      <div class="field">
        <%= message_form.submit "Wyślij" %>
      </div>
    </fieldset>
<% end %>